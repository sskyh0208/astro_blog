---
import PageTitle from "../components/PageTitle.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import { author } from "../lib/config";
const pageTitle = "サイトについて";
---

<BaseLayout pageTitle={pageTitle}>
  <PageTitle title={pageTitle} />
  <div class="flex flex-col items-center space-y-8">
    <div class="flex items-center gap-8">
      <div class="relative w-28 h-28 rounded-full overflow-hidden">
        <img
          src={author.icon}
          alt="プロフィール画像"
        />
      </div>
    
      <div class="text-center">
        <h1 class="text-3xl font-bold mb-2">{author.name}</h1>
        <p class="text-sm text-muted-foreground">
          {author.occupation}
        </p>
        <p class="text-sm text-muted-foreground">
          {author.place}在住
        </p>
      </div>
    </div>
  
    <p class="max-w-2xl text-center">{author.description}</p>
  
    <div class="flex space-x-4">
      {author.socailLinks.map((link) => (
        <a href={link.url} target="_blank" rel="noopener noreferrer" class="text-primary-500">
          <img class="w-8 h-8" src={`/${link.name}.png`} alt={link.name} />
        </a>
      ))}
    </div>
  </div>
</BaseLayout>
