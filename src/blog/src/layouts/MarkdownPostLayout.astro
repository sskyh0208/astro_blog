---
import BaseLayout from "./BaseLayout.astro";
import PostHeader from "../components/PostHeader.astro";
import PostFooter from "../components/PostFooter.astro";

const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <article class="flex flex-col space-y-8">
    <PostHeader
      imageUrl={frontmatter.imageUrl}
      imageAlt={frontmatter.imageAlt}
      title={frontmatter.title}
      authorIconUrl={frontmatter.authorIconUrl}
      authorIconAlt={frontmatter.authorIconAlt}
      author={frontmatter.author}
      pubDate={frontmatter.pubDate}
      tag={frontmatter.tags[0]}
    />
    <section class="markdown-body">
      <slot />
    </section>
    <PostFooter currentTitle={frontmatter.title} tags={frontmatter.tags} />
  </article>
</BaseLayout>

<style is:global>
  .markdown-body ul {
    @apply list-disc list-inside pl-4 mb-4;
  }
  .markdown-body h1,
  .markdown-body h2,
  .markdown-body h3 {
    @apply font-bold mb-4;
  }
  .markdown-body h1,
  .markdown-body h2 {
    @apply border-b-2 border-solid border-gray-200;
  }
  .markdown-body h1 {
    @apply text-3xl pb-2;
  }
  .markdown-body h2 {
    @apply text-2xl;
  }
  .markdown-body h3 {
    @apply text-lg;
  }
  .markdown-body p {
    @apply mb-4;
  }
</style>
