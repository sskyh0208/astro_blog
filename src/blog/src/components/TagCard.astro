---

const { tag, count, size } = Astro.props;
const imageSize = size === "small" || !size ? "w-6 h-6" : size === "medium" ? "w-16 h-16" : "w-24 h-24";
const textSize = size === "small" || !size ? "text-sm" : size === "medium" ? "text-lg" : "text-xl";
---

<a
  href={`/tags/${tag}/1`}
  class="flex items-center justify-center py-2 px-4 rounded-xl border space-x-2 transition-all duration-500 ease-out hover:bg-neutral-50"
>
  <img 
    class={`${imageSize} rounded-full`}
    src={`/${tag}.png`}
    alt={tag}
  />
  <p class={textSize}>{tag}{count && `（${count}）`}</p>
</a>
