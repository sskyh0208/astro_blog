---
import { getImageUrlWithTag } from "../../lib/utils"
import { Icon } from 'astro-icon/components'

const {
  title,
  pubDate,
  tag,
} = Astro.props
const imageUrl = getImageUrlWithTag(tag)
const getStrDate = (date) => {
  const d = new Date(date)
  return `${d.getFullYear()}年${d.getMonth() + 1}月${d.getDate()}日 ${d.getHours()}:${d.getMinutes()}`
}
const strDate = getStrDate(pubDate)
---

<div class="flex flex-col space-y-4 md:space-y-8 items-center py-8 md:py-16">

  <h1 class="text-xl md:text-4xl font-bold">{title}</h1>

  <div class="grid grid-cols-2 text-neutral-500 text-sm">
    <a class="flex justify-center items-center" href={`/tags/${tag}/1`}>
      <Icon name="mdi:tag" class="mr-2" />
      <p>{tag}</p>
    </a>
    <p>{strDate}</p>
  </div>
</div>
