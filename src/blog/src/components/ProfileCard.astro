const { name, place, occupation } = identity;
---

<div class="flex flex-col items-center space-y-8">
  <div class="relative w-48 h-48 rounded-full overflow-hidden">
    <img
      src="/author.jpg"
      alt="プロフィール画像"
    />
  </div>

  <div class="text-center">
    <h1 class="text-3xl font-bold mb-2">{name}</h1>
    <p class="text-lg text-muted-foreground">
      {occupation}
    </p>
    <p class="text-lg text-muted-foreground">
      {place}在住
    </p>
  </div>

  <p class="max-w-2xl text-center">{description}</p>

  <div class="flex space-x-4">
    {socailLinks.map((link) => (
      <a href={link.url} target="_blank" rel="noopener noreferrer" class="text-primary-500">
        <img class="w-8 h-8" src={`/${link.name}.png`} alt={link.name} />
      </a>
    ))}
  </div>
</div>

